@model CommanLayer.UserAuthoCL

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Meta Tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/png" href="~/assets/images/icon.png">
    <title>Welcome</title>
    <link href="~/assets/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/css/style.css" rel="stylesheet">

</head>

<body>

    <form class="myForm" method="post" asp-controller="Account" asp-action="Login">
        <div class="form-group">
            <div class="form_H">
                <img src="~/assets/images/logo.png">
                <h1>Log In to Your Account</h1>
                <p class="text-danger">@ViewBag.error</p>
            </div>
            <input type="email" asp-for="Email" class="form-control " placeholder="Username" >
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">

            <input type="password" asp-for="Password" class="form-control " placeholder="Password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="text-right mr---">
            <span class="txt1">
                Forgot :
            </span>
            <a href="#" class="txt2">
                Password?
            </a>
        </div>

        <div class="btn-S">
            <button type="submit" class="btn-submit">Login</button>
        </div>
        <div class="sign-up">
            Don't have an account yet ? <a href="#">Sign Up</a>
        </div>
    </form>



    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>

</body>

</html>